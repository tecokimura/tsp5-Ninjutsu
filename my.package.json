{
    "private": true,
    "scripts": {
        "dev": "parcel src/index.html",
        "build": "rm dist/*; parcel build src/index.html -d dist"
    },
    "devDependencies": {
        "@types/jest": "^23.3.10",
        "@types/p5": "^1.3.1",
        "jest": "^29.2.1",
        "parcel-bundler": "latest",
        "ts-jest": "^29.0.3",
        "typescript": "^4.5.2"
    },
    "jest": {
        "moduleFileExtesions": [
            "ts"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    },
    "globals": {
        "ts-jest": {
            "tsConfigFile": "tsconfig.json"
        }
    },
    "testMatch": [
        "**/__test__/*.+(ts|tsx|js)"
    ],
    "dependencies": {
        "p5": "^1.4.0"
    }
}
